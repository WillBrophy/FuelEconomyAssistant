<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="39"
        android:inputType="number"
        android:key="economy_goal_pref"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/economy_goal_title" />
    <EditTextPreference
        android:defaultValue="39"
        android:inputType="number"
        android:key="epa_city_pref"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/epa_city_title" />
    <EditTextPreference
        android:defaultValue="39"
        android:inputType="number"
        android:key="epa_highway_pref"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/epa_highway_title" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/units_list_titles"
        android:entryValues="@array/units_list_values"
        android:key="units_pref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/units_title" />

        <ListPreference
        android:defaultValue="0"
        android:entries="@array/prefered_fuel_list_titles"
        android:entryValues="@array/prefered_fuel_list_values"
        android:key="prefered_fuel_pref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/prefered_fuel_title" />
        
            <ListPreference
        android:defaultValue="0"
        android:entries="@array/color_scheme_list_titles"
        android:entryValues="@array/color_scheme_list_values"
        android:key="color_scheme_pref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/color_scheme_title" />
            
                <ListPreference
        android:defaultValue="0"
        android:entries="@array/graph_data_list_titles"
        android:entryValues="@array/graph_data_list_values"
        android:key="graph_data_pref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/graph_data_title" />
                    <ListPreference
        android:defaultValue="0"
        android:entries="@array/data_source_list_titles"
        android:entryValues="@array/data_source_list_values"
        android:key="data_source_pref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/data_source_title" />


</PreferenceScreen>